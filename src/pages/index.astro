---
import Button from "../components/button.astro";
import Email from "../components/email.astro";
import Linkedin from "../components/linkedin.astro";
import Github from "../components/github.astro";
import Image from "astro/components/Image.astro";
import wotnot from "../images/wotnot.webp";
import cloudConnect from "../images/cloud-connect.jpeg";
import parkSpace from "../images/parkspace.jpeg";
import growBiz from "../images/growbiz.jpeg";
import Link from "../components/link.astro";
---

<html lang="en">
    <head>
        <!-- Google Tag Manager -->
        <script>
            (function (w, d, s, l, i) {
                w[l] = w[l] || [];
                w[l].push({
                    "gtm.start": new Date().getTime(),
                    event: "gtm.js",
